{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**"]
    },
    "build:prod": {
      "dependsOn": ["^build", "^build:prod"],
      "outputs": [".next/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "fmt": {
      "dependsOn": ["^fmt"]
    },
    "spellcheck": {
      "dependsOn": ["^spellcheck"]
    }
  }
}
